{
  "title": "Runpod Whisper + Finetune",
  "description": "Whisper GPU transcription and TrOCR finetune endpoint.",
  "type": "serverless",
  "iconUrl": "https://cdn-icons-png.flaticon.com/512/3602/3602123.png",

  "config": {
    "runOn": "GPU",
    "containerDiskInGb": 30,

    "presets": [
      {
        "name": "NVIDIA T4 GPU (Spot)",
        "gpu": "NVIDIA T4",
        "gpuCount": 1,
        "cpuCount": 2,
        "memoryInGb": 8,
        "minWorkers": 0,
        "maxWorkers": 3,
        "timeoutInSeconds": 1800,
        "useSpot": true
      }
    ]
  }
}
